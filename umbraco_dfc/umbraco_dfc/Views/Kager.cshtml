    <main>
      <div class="IntroTxt">
        <h1>@Umbraco.Field("kagerOverskrift")</h1>
        <p>
          @Umbraco.Field("kagerTekst")
        </p>
        <button
          onclick="window.location.href= '/kontakt-os';"
          class="laesMereBtn"
        >
          @Umbraco.Field("kagerKnap")
        </button>
      </div>
      <div class="produkt1">
        <div class="produkt1Img">
            @{
    var floedeskumskage = Model.GetPropertyValue<IPublishedContent>("floedeskumskagerBillede");
    if(floedeskumskage != null){
    <img src="@floedeskumskage.Url" alt="Flødeskumskager" />
    }
    }
          
        </div>
        <div class="produkt1Container">
          <div class="produktBorder"></div>
          <div class="produktTxt">
            <h2>@Umbraco.Field("floedeskumskagerOverskrift")</h2>
            <p>
              @Umbraco.Field("floedeskumskagerTekst")
            </p>
          </div>
        </div>
      </div>
      <div class="produkt2">
        <div class="produkt2Img">
            @{
    var taerte = Model.GetPropertyValue<IPublishedContent>("taerterBillede");
    if(taerte != null){
    <img src="@taerte.Url" alt="Tærter" />
    }
    }
          
        </div>
        <div class="produkt2Container">
          <div class="produkt2Border"></div>
          <div class="produkt2Txt">
            <h2>@Umbraco.Field("taerterOverskrift")</h2>
