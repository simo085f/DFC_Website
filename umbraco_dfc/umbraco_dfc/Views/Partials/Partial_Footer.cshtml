@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@inherits Umbraco.Web.Mvc.UmbracoViewPage

  <footer>
      <div class="footerContainer">
        <div class="kontakt">
          <h3>Kontakt</h3>
          <ul>
            <li>Det Franske Conditori</li>
            <li>+45 35 35 15 46</li>
            <li>kontakt@detfranskeconditori.dk</li>
            <li>H.C Ørstedsvej 44</li>
            <li>1879 Frederiksberg</li>
          </ul>
        </div>
        <div class="aabningstider">
          <h3>Åbningstider</h3>
          <ul>
            <li>Vores åbningstider er:</li>
            <li>Mandag - Fredag: 06.00 - 17.30</li>
            <li>Lørdag - Søndag: 06.00 - 16.00</li>
          </ul>
        </div>
        <div class="socialeMedier">
          <h3>Følg os</h3>
          <div class="soMeIkoner">
            <a
              href="https://www.facebook.com/detfranskeconditori/"
              aria-label="Følg os på Facebook"
              class="facebook"
              target="_blank">
                 @{
    var facebook = Model.GetPropertyValue<IPublishedContent>("facebook");
    if(facebook != null){
     <img src="@facebook.Url" alt="facebook"
            />
    }
    }
    </a>
            <a
              href="https://www.instagram.com/detfranskeconditori/"
              aria-label="Følg os på Instagram"
              class="instagram"
              target="_blank"
            >
                 @{
    var instagram = Model.GetPropertyValue<IPublishedContent>("instagram");
    if(instagram != null){
     <img src="@instagram.Url" alt="instagram"
            />
    }
    }
              </a>
          </div>
        </div>
        <div class="kontrolRapport">
          <h3>Kontrolrapport</h3>
          <div class="rapportContainer">
            <a href="https://www.findsmiley.dk/112428" target="_blank">
                @{
    var smiley = Model.GetPropertyValue<IPublishedContent>("smiley");
    if(smiley != null){
    <img src="@smiley.Url" alt="Smiley rapport"
            />
    }
    }
              </a>
          </div>
        </div>
      </div>
    </footer>